  author = {Haas, Bianca and Mackay, Mary and Novaglio, Camilla and Fullbrook, Liam and Murunga, Michael and Sbrocchi, Carla and McDonald, Jan and McCormack, Phillipa C. and Alexander, Karen and Fudge, Maree and Goldsworthy, Lyn and Boschetti, Fabio and Dutton, Ian and Dutra, Leo and McGee, Jeffrey and Rousseau, Yannick and Spain, Erica and Stephenson, Robert and Vince, Joanna and Wilcox, Chris and Haward, Marcus},
