@article{terhofstedeOffshoreWindFarms2022,
  title = {Offshore Wind Farms Contribute to Epibenthic Biodiversity in the {{North Sea}}},
  author = {{ter Hofstede}, R. and Driessen, F. M. F. and Elzinga, P. J. and Van Koningsveld, M. and Schutter, M.},
  year = {2022},
